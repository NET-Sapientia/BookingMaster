<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/card_view"
    card_view:cardCornerRadius="5dp"
    android:layout_marginStart="25dp"
    android:layout_marginEnd="25dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_image_of_the_product"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/city_hotel"
            android:layout_marginTop="10dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/ib_call_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/ic_baseline_phone_24"
            android:clickable="true"
            android:focusable="true"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/iv_image_of_the_product" />

        <TextView
            android:id="@+id/tv_accommodation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:paddingTop="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textColor="@color/black"
            android:textFontWeight="@integer/material_motion_duration_medium_1"
            android:textSize="18sp"
            android:text="City hotel Budapest"
            card_view:layout_constraintStart_toEndOf="@id/ib_call_icon"
            card_view:layout_constraintTop_toBottomOf="@+id/iv_image_of_the_product" />

        <ImageButton
            android:id="@+id/ib_location_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_baseline_location_on_24"
            android:clickable="true"
            android:focusable="true"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/ib_call_icon" />

        <TextView
            android:id="@+id/tv_room_capacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:paddingTop="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textColor="@color/grey"
            android:textFontWeight="@integer/material_motion_duration_medium_1"
            android:text="Budapest"
            card_view:layout_constraintStart_toEndOf="@id/ib_location_icon"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_accommodation_name" />

        <ImageButton
            android:id="@+id/ib_house_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_baseline_house_24"
            android:clickable="true"
            android:focusable="true"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/tv_room_capacity" />

        <TextView
            android:id="@+id/tv_accommodation_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:paddingTop="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textColor="@color/grey"
            android:textFontWeight="@integer/material_motion_duration_medium_1"
            android:text="Hotel"
            card_view:layout_constraintStart_toEndOf="@id/ib_house_icon"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_room_capacity" />

        <TextView
            android:id="@+id/tv_accommodation_capacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:paddingTop="5dp"
            android:textColor="@color/grey"
            android:textFontWeight="@integer/material_motion_duration_medium_1"
            android:text="rooms"
            card_view:layout_constraintStart_toEndOf="@id/tv_accommodation_type"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_room_capacity" />



